{
  "name": "assembly-client-dotnet",
  "version": "1.0.5-*",
  "title": "Assembly Client",
  "copyright": "Assembly Education",
  "packOptions": {
    "projectUrl": "https://github.com/assembly-edu/assembly-client-dotnet",
    "iconUrl": "http://assembly.education/images/logo-animation/icon-71e948ce.svg",
    "summary": "A .NET client for the Assembly Platform http://developers.assembly.education"
  },
  "buildOptions": {
    "warningsAsErrors": true,
    "xmlDoc": false,
    "additionalArguments": [ "/ruleset:stylecop.ruleset" ]
  },
  "dependencies": {
    "NUnit": {
      "version": "3.2.1",
      "type": "build"
    },
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    },
    "Newtonsoft.Json": "9.0.1",
    "Portable.Text.Encoding": "0.8.3"
  },
  "tools": {
    "Microsoft.DotNet.Watcher.Tools": "1.0.0-preview2-final"
  },
  "testRunner": "nunit",
  "frameworks": {
    "net45": {
      "dependencies": {
        "Moq": {
          "version": "4.6.36-alpha",
          "type"   : "build"
        },
        "RichardSzalay.MockHttp": {
          "version": "1.3.0",
          "type"   : "build"
        }
      }
    },
    "netstandard1.1": {
      "imports": [
        "dnxcore50",
        "netcoreapp1.0",
        "portable-net45+win8"
      ],
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        },
        "Moq": {
          "version": "4.6.36-alpha",
          "type"   : "build"
        },
        "RichardSzalay.MockHttp": {
          "version": "1.3.0-netstandard-alpha2",
          "type"   : "build"
        },
        "dotnet-test-nunit": {
          "version": "3.4.0-alpha-2",
          "type"   : "build"
        },
        "System.Runtime": "4.1.0",
        "System.Runtime.Serialization.Json": "4.0.2",
        "System.Linq.Expressions": "4.1.0",
        "System.Diagnostics.TraceSource": "4.0.0"
      }
    }
  }
}